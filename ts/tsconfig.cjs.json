{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "rootDir": "../src",
    "outDir": "../lib/cjs",
    "jsx": "react",
    "declaration": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["../src/index.ts", "./types.d.ts"]
}
